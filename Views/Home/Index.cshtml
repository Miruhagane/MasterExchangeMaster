@{

    Layout = null;
  
}
    <head>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

        <!-- bootstrap 4 -->
        <title> @ViewBag.Title Iniciar Sesión</title> 
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        <script src="~/Scripts/secion.js"></script>
        <!-- Ionic icons -->
        <script src="https://kit.fontawesome.com/30fa52b14d.js" crossorigin="anonymous"></script>
        <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>

<div class="container-fluid">

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 " style="margin-top : 6%; margin-bottom : 15%;">

            <img id="logo1" src="~/Content/img/centro_cambio.png" />


            <div class="card rounded  mt-1">
                <div class="card-header border border-secondary text-center">
                    <h5>Iniciar Sesion</h5>
                </div>
                <div class="card-body btn btn-light border border-secondary text-center">
                    <form action="/Home/Index" class="mt-4" method="post">

                        <div class="form-group">
                            <div class="input-group border border-secondary mb-2">
                                <div class="input-group-prepend ">
                                    <div class="input-group-text"><i class="fas fa-user-shield"></i></div>
                                </div>
                                <input type="text" class="form-control btn btn-light" id="inlineFormInputGroup" name="usuario" placeholder="Nombre de usuraio">
                            </div>
                        </div>

                        <div class="form-group ">


                            <div class="input-group border border-secondary mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"> <i class="fas fa-key"></i></div>
                                </div>
                                <input type="password" class="form-control btn btn-light" id="inlineFormInputGroup" name="Pass" placeholder="Contraseña">
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" onclick="obterneruser()" class="btn btn-success text-center">
                                Iniciar Sesion
                            </button>
                        </div>


                    </form>
                 
                    @{
                        if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert alert-warning border border-warning text-center" role="alert">
                                @ViewBag.Message
                            </div>
                        }
                    }

                </div>
            </div>




        </div>
        <div class="col-md-4">


        </div>
    </div>
</div>

