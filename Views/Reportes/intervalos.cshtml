                </div>

                <div class="col-sm-12">
                    <span>Fecha fin</span>
                    <input type="date" name="fec2" class="form-control form-control-sm" />
                </div>

                <div class="col-sm-12 mt-3">
                    <input type="submit" value="Obterner Reporte" class="btn btn-success btn-sm" />
                </div>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 id="Ventas"> Reporte de Ventas Ponderado</h5>

        </div>
        <div class="card-body">


            @using (Html.BeginForm("ventapon", "Reportes", FormMethod.Post))
            {

                <div class="col-sm-12">
                    <span>Fecha Inicio</span>
                    <input type="date" name="fec1" class="form-control form-control-sm" />
                </div>

                <div class="col-sm-12">
                    <span>Fecha fin</span>
                    <input type="date" name="fec2" class="form-control form-control-sm" />
                </div>

                <div class="col-sm-12 mt-3">
                    <input type="submit" value="Obterner Reporte" class="btn btn-success btn-sm" />
                </div>
            }
        </div>
    </div>
    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-body">
            <div class="col-sm-6">
                <h5 id="arqueo">Reporte de Remesas</h5>

            </div>

            @using (Html.BeginForm("excels", "Reportes", FormMethod.Post))
            {

                <div class="col-sm-3">
                    <span>Dia</span>
                    <input type="date" name="fecha" class="form-control form-control-sm" />
                </div>
                <div class="col-sm-6">

                </div>
                <div class="col-sm-12">
                    <input type="submit" value="Obterner Excel" class="btn btn-success btn-sm" />
