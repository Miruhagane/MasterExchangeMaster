@model IEnumerable<WebApplication2.Models.ViewModels.inventario>

@{
    Layout = null;
}

<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">
                Saldo Salida
            </th>

            <th scope="col">
                Moneda
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    $@string.Format("{0:#,0.00}", item.Dbl_SaldoSalida)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Txt_Moneda)
                </td>
            </tr>
        </tbody>
    }

</table>
