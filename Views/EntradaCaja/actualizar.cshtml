@model WebApplication2.Models.Tb_EntradaSuc

@{
    ViewBag.Title = "Cierre de caja";
}


<div class="col-sm-8">
    <div class="card shadow-lg rounded" >
        <div class="card-header">
            <h5>Ingresa tu saldo Final</h5>
        </div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <form>
                    <div class="form-row">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Lng_IdEntrada)

                        <div class="col-sm-6">
                            <label>Saldo Inicial</label>
                            <div class="">
                                @Html.EditorFor(model => model.Dbl_SaldoEntrada, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.Dbl_SaldoEntrada, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label>Saldo Final</label>
                            <div class="">
                                @Html.EditorFor(model => model.Dbl_SaldoSalido, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Dbl_SaldoSalido, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label>Registro Inicial</label>
                            <div class="">
                                @Html.EditorFor(model => model.Fec_Ini, new { htmlAttributes = new { @type = "date", @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.Fec_Ini, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label>Regristro Final</label>
                            <div class="">
                                @Html.TextBoxFor(model => model.Fec_Ini, new { @Value = @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss") })
                                @Html.ValidationMessageFor(model => model.Fec_Fin, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6" style="display: none">
                            @Html.LabelFor(model => model.Int_Sucursal, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="">
                                @Html.EditorFor(model => model.Int_Sucursal, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.Int_Sucursal, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6" style="display: none">
                            <label> Moneda</label>
                            <div class="">
                                @Html.EditorFor(model => model.Int_IdMoneda, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.Int_IdMoneda, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6" style="display: none">
                            <label>Activo</label>
                            <div class="">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Bol_Activo)
                                    @Html.ValidationMessageFor(model => model.Bol_Activo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">


                            <button type="submit" class="btn btn-danger">Guardar</button>

                        </div>
                    </div>

                </form>

            }

        </div>
    </div>

</div>
